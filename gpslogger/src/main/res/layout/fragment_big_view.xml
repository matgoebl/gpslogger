<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    tools:context="com.mendhak.gpslogger.GpsMainActivity$PlaceholderFragment">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/bigview_text_latlong"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/bigview_textsize2"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/bigview_text_time"
        android:layout_below="@+id/bigview_text_latlong"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/bigview_text_latlong"
        android:layout_alignEnd="@+id/bigview_text_latlong"
        android:textSize="@dimen/bigview_textsize2"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/bigview_text_speed"
        android:gravity="right"
        android:textAlignment="gravity"
        android:layout_below="@+id/bigview_text_time"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/bigview_text_time"
        android:layout_alignEnd="@+id/bigview_text_time"
        android:textSize="@dimen/bigview_textsize"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/bigview_text_bicycling"
        android:gravity="right"
        android:textAlignment="gravity"
        android:layout_below="@+id/bigview_text_speed"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/bigview_text_speed"
        android:layout_alignEnd="@+id/bigview_text_speed"
        android:textSize="@dimen/bigview_textsize"/>

</RelativeLayout>
