<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/log_customurl_title"
            android:id="@+id/customUrlEnabled"
            android:checked="false"/>
        <Button
            android:id="@+id/customurl_btnSave"
            android:layout_alignParentRight="true"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="@string/save"/>
        </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/log_customurl_interval"
        android:id="@+id/textView"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/customUrlInterval"
        android:text="0"
        android:inputType="number"/>

    <EditText
            android:layout_width="fill_parent"
            android:layout_height="166dp"
            android:id="@+id/customUrlText"
            android:text="http://localhost/log?lat=%LAT&amp;longitude=%LON&amp;time=%TIME&amp;s=%SPD"
            android:inputType="textUri|textCapSentences|textMultiLine"
            android:textStyle="bold"/>

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/log_customurl_urlparameters"
            android:id="@+id/textView"
            android:textStyle="bold"/>

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/textViewLegend"/>

</LinearLayout>